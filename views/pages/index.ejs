<%- include('../partials/header'); -%>
<div class="row">
    <form id="search-index">
        <div class="eight columns search-input-column">
            <input class="u-full-width" type="text" placeholder="<%= search.placeholder %>" id="lookup">
        </div>
        <div class="two columns search-button-column">
            <button class="button search  button-secondary ">Search</button>
        </div>
        <div class="one columns search-filter-column">
            <button class="button search icon-filter"> </button>
        </div>
    </form>
</div> 
<div class="row">
    <div class="twelve columns results">
        <% searchResults.forEach(function(item){ %>
            <card
                src='<%= item.img %>'
                title="<%= item.title %>"
                description="<%= item.description %>">
                <rating ranking="<%= item.ranking %>" count="<%= item.reviewCount %>"></rating>
            </card>
        <% }); %>
    </div>
</div>
<%- include('../partials/footer'); -%>
